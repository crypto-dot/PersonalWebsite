---
	export interface Props {
		title: string;
	}

	const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@200;300;600&display=swap" rel="stylesheet">
	<title>{title}</title>
</head>

<body>
	<slot />
</body>

</html>
<style>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--gradient: linear-gradient(90deg, #EB21FC 0%, #46DCF0 100%);
		--main-bg-color: linear-gradient(180deg, rgba(33, 78, 145, 1) 0%, rgba(42, 99, 182, 1) 54%, rgba(50, 116, 213, 1) 100%);
	}
</style>